# Bash Termux
#
shopt -s autocd
shopt -s histappend
HISTCONTROL=ignoreboth
HISTSIZE=
HISTFILESIZE=
export USER=$(id -un)
exec {BASH_XTRACEFD}>/dev/null
#
#	Aliases
#
alias l='ls -CF'
alias l.='ls -dF .*'
alias ll='ls -alFh'
alias i='apt -y install'
alias I='sudo apt -y reinstall'
alias S='apt show'
alias s='apt list'
alias r='apt -y remove'
alias u='[ -e ~/update.sh ] && ~/update.sh'
alias e='ex(){ if [ -z "$1" ];then ls -F | awk "/\*$/{print}" | sed "s/.$//"; else [ -e "$1" ] && bash $@; fi; };ex'
alias kc='[ -e ~/kc.sh ] && ~/kc.sh || echo "KC.sh not found"'
#
#	Prompt
#
PS1=""; [ "$EUID" -eq "0" ] && PS1="\[\033[38;5;196m\]@"
PS1="$PS1 \[\033[01;36m\]\w >\[\033[34m\]>\[\033[00m\] "

